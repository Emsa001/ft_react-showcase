{
  "compilerOptions": {
    
    "target": "es5",
    "lib": ["dom", "es2016"],
    "jsx": "react",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["node_modules/@types", "./src/types"],
    "types": ["webpack-env"],

    "baseUrl": ".",
    "paths": {
      "react": ["react"],
      "@/*": ["src/*"],
      "!/*": ["src/app/*"]
    }
  },
  "include": ["src/**/*", "react"],
  "exclude": ["node_modules", "dist", "react"]
}